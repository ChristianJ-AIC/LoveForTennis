@{
    ViewData["Title"] = "Page Not Found";
}

<link rel="stylesheet" href="~/css/notfound.css" />

<div class="not-found-container">
    <img src="~/images/tennis-ball.svg" alt="Tennis Ball" class="tennis-ball-image" />
    
    <h1 class="not-found-title">404</h1>
    
    <h2 class="not-found-subtitle">Oops! This shot went out of bounds!</h2>
    
    <p class="not-found-message">
        The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        Let's get you back in the game!
    </p>
    
    <a href="@Url.Action("Index", "Home")" class="back-home-btn">
        Return to Home Court
    </a>
</div>