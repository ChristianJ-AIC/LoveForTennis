@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-check me-2"></i>My Bookings
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Account Holder</h5>
                            <p class="text-muted">@ViewBag.UserName<br>@ViewBag.UserEmail</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h5>Total Bookings</h5>
                            <span class="badge bg-info fs-6">@ViewBag.TotalBookings</span>
                        </div>
                    </div>

                    <!-- Upcoming Bookings Section -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-calendar me-2"></i>Upcoming Bookings
                            </h5>
                            @{
                                var upcomingBookings = ViewBag.UpcomingBookings as List<LoveForTennis.Application.DTOs.BookingDto>;
                            }
                            @if (upcomingBookings != null && upcomingBookings.Any())
                            {
                                @foreach (var booking in upcomingBookings)
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="card-title mb-1">
                                                        <i class="fas fa-tennis-ball me-2 text-success"></i>
                                                        Tennis Court Session
                                                    </h6>
                                                    <p class="text-muted mb-1">
                                                        <i class="fas fa-calendar me-1"></i>@booking.BookingFrom.ToString("MMMM dd, yyyy") at @booking.BookingFrom.ToString("h:mm tt")
                                                    </p>
                                                    <p class="text-muted mb-0">
                                                        <i class="fas fa-clock me-1"></i>Duration: @((booking.BookingTo - booking.BookingFrom).TotalHours) hour(s)
                                                    </p>
                                                </div>
                                                <div class="text-end">
                                                    <span class="badge bg-success mb-2">Confirmed</span><br>
                                                    <small class="text-muted">Booking #@booking.Id</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-info" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No upcoming bookings found. Book your tennis sessions to see them here.
                                </div>
                            }

                            <a href="@Url.Action("BookingCalendar", "Booking")" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>Book New Session
                            </a>
                        </div>
                    </div>

                    <hr>

                    <!-- Past Bookings Section -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-history me-2"></i>Past Bookings
                            </h5>
                            @{
                                var pastBookings = ViewBag.PastBookings as List<LoveForTennis.Application.DTOs.BookingDto>;
                            }
                            @if (pastBookings != null && pastBookings.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Time</th>
                                                <th>Duration</th>
                                                <th>Status</th>
                                                <th>Booking ID</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var booking in pastBookings)
                                            {
                                                <tr>
                                                    <td>@booking.BookingFrom.ToString("MMM dd, yyyy")</td>
                                                    <td>@booking.BookingFrom.ToString("h:mm tt")</td>
                                                    <td>@((booking.BookingTo - booking.BookingFrom).TotalHours) hour(s)</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td>#@booking.Id</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-secondary" role="alert">
                                    <i class="fas fa-history me-2"></i>
                                    No past bookings available. Your booking history will appear here.
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Profile
                        </a>
                        <div>
                            <a href="@Url.Action("Payment", "Account")" class="btn btn-outline-info me-2">
                                <i class="fas fa-credit-card me-2"></i>Payment Info
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>