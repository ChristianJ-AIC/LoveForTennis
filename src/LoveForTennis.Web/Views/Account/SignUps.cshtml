@{
    ViewData["Title"] = "My Sign Ups";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-check me-2"></i>My Sign Ups
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Account Holder</h5>
                            <p class="text-muted">@ViewBag.UserName<br>@ViewBag.UserEmail</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h5>Total Bookings</h5>
                            <span class="badge bg-info fs-6">0</span>
                        </div>
                    </div>

                    <!-- Upcoming Sign Ups Section -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-calendar me-2"></i>Upcoming Sign Ups
                            </h5>
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                No upcoming sign ups found. Book your tennis sessions to see them here.
                            </div>
                            
                            <!-- Placeholder for upcoming sign ups -->
                            <div class="card mb-3 d-none" id="upcomingSignUpTemplate">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="card-title mb-1">
                                                <i class="fas fa-tennis-ball me-2 text-success"></i>
                                                Tennis Court Session
                                            </h6>
                                            <p class="text-muted mb-1">
                                                <i class="fas fa-calendar me-1"></i>January 25, 2025 at 2:00 PM
                                            </p>
                                            <p class="text-muted mb-0">
                                                <i class="fas fa-map-marker-alt me-1"></i>Court 1
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success mb-2">Confirmed</span><br>
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-times"></i> Cancel
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <a href="#" class="btn btn-success" onclick="alert('Booking functionality coming soon!')">
                                <i class="fas fa-plus me-2"></i>Book New Session
                            </a>
                        </div>
                    </div>

                    <hr>

                    <!-- Past Sign Ups Section -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-history me-2"></i>Past Sign Ups
                            </h5>
                            <div class="alert alert-secondary" role="alert">
                                <i class="fas fa-history me-2"></i>
                                No past sign ups available. Your booking history will appear here.
                            </div>
                            
                            <!-- Placeholder for past sign ups table -->
                            <div class="table-responsive d-none" id="pastSignUpsTable">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Court</th>
                                            <th>Duration</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Jan 10, 2025</td>
                                            <td>10:00 AM</td>
                                            <td>Court 2</td>
                                            <td>1 hour</td>
                                            <td><span class="badge bg-success">Completed</span></td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-download"></i> Receipt
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Profile
                        </a>
                        <div>
                            <a href="@Url.Action("Payment", "Account")" class="btn btn-outline-info me-2">
                                <i class="fas fa-credit-card me-2"></i>Payment Info
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>